{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgenticAction",
  "description": "Autonomous action command from Cloud AI Agent",
  "version": "1.0.0",
  "type": "object",
  "required": ["type", "timestamp"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Type of action to execute",
      "enum": [
        "modify_workout",
        "cancel_activity",
        "schedule_breathing_session",
        "adjust_calendar",
        "send_notification",
        "update_pet_mood",
        "trigger_haptic"
      ]
    },
    "details": {
      "type": "object",
      "description": "Action-specific parameters",
      "properties": {
        "downgrade_to": { "type": "string" },
        "duration": { "type": "integer" },
        "reason": { "type": "string" },
        "mood": { "type": "string" },
        "message": { "type": "string" },
        "haptic_pattern": { "type": "string" },
        "calendar_event_id": { "type": "string" }
      }
    },
    "reasoning": {
      "type": "string",
      "description": "AI reasoning for this action (for transparency)"
    },
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp in milliseconds"
    }
  }
}
