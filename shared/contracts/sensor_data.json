{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SensorPayload",
  "description": "Sensor data payload from Watch to Phone/Cloud",
  "version": "1.0.0",
  "type": "object",
  "required": ["heartRate", "timestamp"],
  "properties": {
    "heartRate": {
      "type": "integer",
      "description": "Heart rate in beats per minute",
      "minimum": 30,
      "maximum": 220
    },
    "accelerometer": {
      "type": "object",
      "description": "3-axis accelerometer data in m/sÂ²",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "gyroscope": {
      "type": "object",
      "description": "3-axis gyroscope data in rad/s",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "gps": {
      "type": "object",
      "description": "GPS coordinates",
      "properties": {
        "latitude": { "type": "number", "minimum": -90, "maximum": 90 },
        "longitude": { "type": "number", "minimum": -180, "maximum": 180 },
        "altitude": { "type": "number" },
        "accuracy": { "type": "number" }
      }
    },
    "barometer": {
      "type": "number",
      "description": "Atmospheric pressure in hPa"
    },
    "sleepScore": {
      "type": "integer",
      "description": "Daily sleep quality score",
      "minimum": 0,
      "maximum": 100
    },
    "recoveryScore": {
      "type": "integer",
      "description": "Daily recovery/readiness score",
      "minimum": 0,
      "maximum": 100
    },
    "stressLevel": {
      "type": "integer",
      "description": "Current stress level",
      "minimum": 0,
      "maximum": 100
    },
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp in milliseconds"
    }
  }
}
